<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
	xmlns:android="http://schemas.android.com/apk/res/android"
	id="org.apache.cordova.plugins.MessageBox"
	version="3.0.4">

	<name>MessageBox</name>

	<!--asset src="www/MessageBox.js" target="MessageBox.js" /-->
	<js-module src="www/MessageBox.js">
		<clobbers target="org.apache.cordova.plugins.MessageBox" />
	</js-module>

	<dependency id="org.apache.cordova.core.dialogs"/>

	<!-- android -->
	<platform name="android">
		<config-file target="AndroidManifest.xml" parent="/manifest/application">
			<activity android:name="org.apache.cordova.plugins.MessageBox"
					  android:label="@string/app_name">
				<intent-filter>
				</intent-filter>
			</activity>
		</config-file>

		<!-- Cordova 1.5 - 1.9 -->
		<config-file target="res/xml/plugins.xml" parent="/plugins">
			<plugin name="MessageBox"
				value="org.apache.cordova.plugins.MessageBox"/>
		</config-file>

		<!-- Cordova 2.0.0 -->
		<config-file target="res/xml/config.xml" parent="/cordova/plugins">
			<plugin name="MessageBox"
				value="org.apache.cordova.plugins.MessageBox"/>
		</config-file>

		<source-file src="src/android/MessageBox.java"
				target-dir="org/apache/cordova/plugins/MessageBox" />
	</platform>

	<!-- ios -->
	<platform name="ios">
		<plugins-plist key="MessageBox" />

		<header-file src="MessageBox.h" />

		<source-file src="MessageBox.m" />
	</platform>

	<!-- blackberry10 -->
	<platform name="blackberry10">
		<source-file src="src/blackberry10/index.js" />
		<config-file target="www/config.xml" parent="/widget">
			<feature name="org.apache.cordova.plugins.MessageBox" value="org.apache.cordova.plugins.MessageBox" />
			<feature name="Notification">
				<param name="blackberry-package" value="org.apache.cordova.notification.Notification" />
			</feature>
		</config-file>
	</platform>

</plugin>

